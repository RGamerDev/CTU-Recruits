@model JobSeekerCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<form enctype="multipart/form-data" asp-action="Create" asp-controller="JobSeeker" method="post" class="mt-3">
    <div class="form-group row">
        <label asp-for="Name" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Name" class="form-control" placeholder="Name" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Skills" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Skills" class="form-control" placeholder="Skills" />
            <span asp-validation-for="Skills" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="YearsOfExperience" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="YearsOfExperience" class="form-control" placeholder="Years" />
            <span asp-validation-for="YearsOfExperience" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Description" class="form-control" placeholder="Description" />
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="form-control custom-file-input" placeholder="Photo" />
                <label class="custom-file-label">Choose Profile photo...</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="CV" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="CV" class="form-control custom-file-input" placeholder="Photo" />
                <label class="custom-file-label">Upload CV here...</label>
            </div>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="PublicCV" class="col-sm-2 col-form-label"></label>
        <div class="form-check">
            <input asp-for="PublicCV" class="custom-checkbox" placeholder="CV" />
            <label class="form-check-label"></label>
        </div>
    </div>

    <div asp-validation-summary="All" class="text-danger"></div>

    <div class="form-group row">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-action="Index" asp-controller="JobSeeker" class="btn btn-primary">Back</a>
    </div>

    @section Scripts {
    <script>
        $(document).ready(function() {
            $('.custom-file-input').on("change", function () {
                var filename = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(filename);
            })
        })
    </script>
    }

</form>

